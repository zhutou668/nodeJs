<div class='search-form mt-4 ml-4 mr-4'>
    <form method='POST'>
        <div class='form-group'>
            <label for='search-input'>Search</label>
            <input
                type='text'
                name='q'
                class='form-control'
                id='search-input'
                aria-describedby='emailHelp'
                placeholder='Search...'
            />
        </div>
        <button
            type='submit'
            class='btn btn-outline-success my-2 my-sm-0'
        >Search</button>
    </form>
</div>