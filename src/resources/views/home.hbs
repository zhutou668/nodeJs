<div class= "mt-4">
	<div class = "row">
		<div class="col-lg-2">
				<button>Học ngay</button>
		</div>
		<div class="row col-lg-10">
				{{#each courses}}
					<div class = "col-sm-6 mt-2 col-lg-4">
						<div class="card" style="width: 18rem;">
							<a href="/course/{{this.slug}}">
								 <img class="card-img-top" src="{{this.img}}" alt="{{this.name}}">
							</a>
						  <div class="card-body">
							<a href="/course/{{this.slug}}">
								<h5 class="card-title">{{this.name}}</h5>
							</a>
						    <p class="card-text">{{this.description}}</p>
						    <a href="/course/{{this.slug}}" class="btn btn-primary">Xem khoá học</a>
						  </div>
						</div>
					</div>
				{{/each}}
		</div>
	</div>
</div>