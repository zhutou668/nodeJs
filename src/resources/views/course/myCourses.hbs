<div class="mt-4">
	<table class="table">
	  <thead>
	    <tr>
	      <th scope="col">STT</th>
	      <th scope="col">Tên khoá học</th>
	      <th scope="col">Giá</th>
	      <th scope="col">Thời gian tạo</th>
		  <th scope="col">Thao tác</th>
	    </tr>
	  </thead>
	  <tbody>
	  {{#each courses}}
	    <tr>
	      <th scope="row">{{sumIndex @index 1}}</th>
	      <td>{{this.name}}</td>
	      <td>{{this.price}}</td>
	      <td>{{this.createdAt}}</td>
		  <td><a href="/course/edit/{{this._id}}" class="btn btn-link">Sửa</a>
		  <a href="button" class="btn btn-link">Xoá</a>
		  </td>
	    </tr>
		{{/each}}
	  </tbody>
	</table>
</div>